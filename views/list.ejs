<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <ul>
            <% newListItems.forEach(function(i){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= i._id %>" onChange="this.form.submit()">
                        <p><%= i.name %></p>
                    </div>
                    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
                </form>
            <% }) %>
         </ul>

         <form class="item" action="/" method="post">
            <input name="newItem" type="text" placeholder="Novo" autocomplete="off" autofocus>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include("footer") -%>